@model ATOMv0.Models.DimFacility
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "DimFacility", FormMethod.Post, new { @class = "form-crud" }))
{
    @Html.AntiForgeryToken()

    <div>
        <h2>Edit</h2>
        <h4>DimFacility</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.SiteName, new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.SiteName)
                @Html.ValidationMessageFor(model => model.SiteName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KeyCountry, "KeyCountry", new { @class = "control-label" })
            <div>
                @Html.DropDownList("KeyCountry", String.Empty)
                @Html.ValidationMessageFor(model => model.KeyCountry)
                <br /><br />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}